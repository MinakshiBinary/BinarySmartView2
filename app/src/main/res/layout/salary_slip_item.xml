<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/laySalary"
    android:layout_width="@dimen/dim100"
    android:layout_height="@dimen/dim100"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_gravity="center"
    android:background="@drawable/circle_salary"
    android:clickable="true"
    android:orientation="vertical"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblSalaryMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="MAR"
            android:textColor="@drawable/text_selector"
            android:textSize="@dimen/margin_15dp" />

        <TextView
            android:id="@+id/lblSalaryYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="2016"
            android:textColor="@drawable/text_selector" />

        <com.binaryic.binarysmartview.Common.TextAwesome
            android:id="@+id/imgSalary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/fa_download"
            android:textColor="@drawable/text_selector"
            android:textSize="@dimen/margin_15dp" />

    </LinearLayout>
</LinearLayout>