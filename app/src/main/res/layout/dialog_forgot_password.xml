<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/caldroid_lighter_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/red"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="FORGOT PASSWORD"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_DialogEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/dim16"
        android:layout_marginRight="@dimen/dim16"
        android:layout_marginTop="16dp"
        android:ems="15"
        android:hint="@string/user_name"
        android:inputType="textEmailAddress"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim16"
        android:layout_marginLeft="@dimen/dim16"
        android:layout_marginRight="@dimen/dim16"
        android:layout_marginTop="@dimen/margin_10dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/bt_DialogSubmit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_35dp"
            android:layout_weight="1"
            android:background="@color/red"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/bt_DialogCancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_35dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/red"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>
