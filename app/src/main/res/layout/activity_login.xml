<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/rl_Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="HardcodedText">

        <ImageView
            android:id="@+id/iv_Logo"
            android:layout_width="@dimen/dim120"
            android:layout_height="@dimen/dim80"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/et_UserEmailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:hint="User EmailId"
            android:inputType="textEmailAddress"
            android:scaleX="0"
            android:scaleY="0" />

        <EditText
            android:id="@+id/et_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:scaleX="0"
            android:scaleY="0" />

        <EditText
            android:id="@+id/et_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="number"
            android:maxLength="10"
            android:singleLine="true"
            android:visibility="gone" />

        <TextView
            android:scaleX="0"
            android:scaleY="0"
            android:id="@+id/tv_ForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linear_LoginInput"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/forgot_password" />

        <Button
            android:id="@+id/bt_SignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ForgotPassword"
            android:layout_marginTop="30dp"
            android:background="@color/red"
            android:scaleX="0"
            android:scaleY="0"
            android:text="@string/sign_in"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>


</FrameLayout>